<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Crunchr"
    android:background="#D1C7C7"

    >

    <TextView
        android:id = "@+id/textView_equation"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/grid_Layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColorHint="@color/black"
        android:hint="type your equation..."
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        />


    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/grid_Layout"
        android:layout_width="330dp"
        android:layout_height="290dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <!--Row 1 -->
        <Button
            android:id="@+id/one"
            android:layout_width = "75dp"
            android:layout_marginEnd="10dp"
            android:text="1"
            android:backgroundTint="@color/black"
            />

        <Button
            android:id="@+id/two"
            android:layout_width = "75dp"
            android:layout_marginEnd="10dp"
            android:text="2"
            android:backgroundTint="#1F054E"/>

        <Button
            android:id="@+id/three"
            android:layout_width = "75dp"
            android:layout_marginEnd="10dp"
            android:text="3"
            android:backgroundTint="#291251"/>
        <Button
            android:id="@+id/add"
            android:layout_width = "75dp"
            android:text="+"
            android:backgroundTint="#44247E"/>


        <!--Row 2 -->
        <Button
            android:id="@+id/four"
            android:layout_width = "75dp"
            android:text="4"
            app:layout_column="0"
            app:layout_row="1"
            android:backgroundTint="#1F054E"/>

        <Button
            android:id="@+id/five"
            android:layout_width = "75dp"
            android:text="5"
            android:backgroundTint="#291251"/>

        <Button
            android:id="@+id/six"
            android:layout_width = "75dp"
            android:text="6"
            android:backgroundTint="#44247E"/>
        <Button
            android:id="@+id/subtract"
            android:layout_width = "75dp"
            android:text="-"
            android:backgroundTint="#5A359A"/>

        <!--Row 3-->
        <Button
            android:id="@+id/seven"
            android:layout_width = "75dp"
            android:text="7"
            app:layout_column="0"
            app:layout_row="2"
            android:backgroundTint="#291251"/>

        <Button
            android:id="@+id/eight"
            android:layout_width = "75dp"
            android:text="8"
            android:backgroundTint="#44247E"/>

        <Button
            android:id="@+id/nine"
            android:layout_width = "75dp"
            android:text="9"
            android:backgroundTint="#5A359A"/>

        <Button
            android:id="@+id/multiply"
            android:layout_width = "75dp"
            android:text="*"
            android:backgroundTint="#5A359A"/>

        <!--Row 4-->
        <Button
            android:id="@+id/zero"
            android:layout_width = "75dp"
            android:text="0"
            app:layout_column="0"
            app:layout_row="3"
            android:backgroundTint="#44247E"/>

        <Button
            android:id="@+id/decimal"
            android:layout_width = "75dp"
            android:text="."
            android:backgroundTint="#5A359A"/>

        <Button
            android:id="@+id/exponentiation"
            android:layout_width = "75dp"
            android:text="^"
            android:backgroundTint="#5A359A"/>


        <Button
            android:id="@+id/divide"
            android:layout_width = "75dp"
            android:text="/"
            android:backgroundTint="#8664C1"/>

        <!--Row 5-->
        <Button
            android:id="@+id/open_parenthesis"
            android:layout_width = "160dp"
            android:text="("
            app:layout_columnSpan="2"

            app:layout_column="0"
            app:layout_row="4"
            android:backgroundTint="#5A359A"/>

        <Button
            android:id="@+id/closing_parenthesis"

            app:layout_columnSpan="2"
            android:layout_width = "160dp"
            android:text=")"
            android:backgroundTint="#8664C1"/>

        <!--Row 5-->
        <Button
            android:id="@+id/enter"
            android:layout_width = "160dp"
            android:text="enter"
            app:layout_columnSpan="2"
            app:layout_column="0"
            app:layout_row="5"
            android:backgroundTint="#8664C1"/>

        <Button
            android:id="@+id/clear"
            app:layout_columnSpan="2"
            android:layout_width = "160dp"
            android:text="clear"
            android:backgroundTint="#8055CD"/>


    </androidx.gridlayout.widget.GridLayout>

    <Button
        android:id="@+id/history"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="History"
        android:backgroundTint="@color/black"
        />



</androidx.constraintlayout.widget.ConstraintLayout>